generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model kudoboard {
  KudoboardId Int     @id @default(autoincrement())
  title       String
  author      String
  type        String
  img         String?

  //relation

  kudocards kudocard[]
}

model kudocard {
  KudocardId Int    @id @default(autoincrement())
  title      String
  creator    String
  media      String
  upvotes    Int
  isPinned   Boolean

  //relation

  kudocomments kudocomment[]

  kudoboard   kudoboard @relation(fields: [kudoboardId], references: [KudoboardId])
  kudoboardId Int
}

model kudocomment {
  KudocommentId Int    @id @default(autoincrement())
  text          String
  username      String

  //relation

  kudocard           kudocard? @relation(fields: [kudocardKudocardId], references: [KudocardId])
  kudocardKudocardId Int?
}
